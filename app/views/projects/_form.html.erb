<%= form_for(@project) do |f| %>
	<%= f.error_messages %>
    <div class="control-group">
        <%= f.label :name, "Project name:", class: "control-label project-label" %>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-pencil"></i></span>
          <%= f.text_field :name, placeholder: "Project", autofocus: true %>
        </div>
      </div>
    </div>
  
    <div class="control-group">
       <div class="controls">
      <%= f.submit "Add", class: 'btn btn-success'  %>
       </div>
    </div>
<% end %>
