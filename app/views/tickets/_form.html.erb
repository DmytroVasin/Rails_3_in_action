<%= form_for [@project, @ticket] do |f| %>
	<%= f.error_messages %>

	<div class="control-group">
	    <%= f.label :title, "Title:", class: "control-label" %>
	  <div class="controls">
	    <div class="input-prepend">
	      <span class="add-on"><i class="icon-pencil"></i></span>
	      <%= f.text_field :title, placeholder: "Title of ticket", autofocus: true %>
	    </div>
	  </div>
	</div>

	<div class="control-group">
	    <%= f.label :description, "Description:", :class => "control-label" %>
	  <div class="controls">
	    <div class="input-prepend">
	      <%= f.text_area :description, rows: 5, class: "span5" %>
	    </div>
	  </div>
	</div>

	<div class="control-group">
	   <div class="controls">
	  <%= f.submit "Create Ticket", class: 'btn btn-success'  %>
	   </div>
	</div>
<% end %>



