<div id='ticket'>
	<blockquote>
		<p><%= @ticket.title %></p>
		<div class='simple_format'><%= simple_format(@ticket.description) %></div>
		<small>Created by <%= @ticket.user.email %></small>
	</blockquote>
</div>

<%= link_to 'back', project_path(@project.id), class: 'btn right_margin' %>

<%= authorized?("edit tickets", @project) do %>
	<%= link_to "edit ticket", [:edit, @project, @ticket], class: 'btn btn-warning'  %>
<% end %>	
<!-- or you can use edit_project_ticket_path(@project, @ticket)  -->

<%= authorized?("delete tickets", @project) do %>
	<%= link_to "Delete Ticket", [@project, @ticket], 
															  method: :delete,
															  confirm: "Are you sure you want to delete this ticket?", 
															  class: 'btn btn-danger' %>
<% end %>

<% if @ticket.asset.exists? %>
	<h3>Attached File</h3>
	<div class="asset">
		<p>
			<%= link_to File.basename(@ticket.asset.path), @ticket.asset.url %>
		</p>
		<p><small><%= number_to_human_size(@ticket.asset.size) %>(<%= @ticket.asset.content_type %>)</small></p>
	</div>
<% end %>
